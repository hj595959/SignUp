<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="40dp"
        app:cardCornerRadius="40dp"
        android:layout_height="400dp"

        >

        <LinearLayout
            android:background="#eee6c4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/person11"
            android:layout_gravity="center_horizontal"
            >\
        </ImageView>

        <TextView
            android:text="이름:김간병"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:id="@+id/cardName"
            android:layout_width="280dp"
            android:layout_marginTop="160dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            >

        </TextView>

        <TextView
            android:id="@+id/cardDate"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="220dp"
            android:text="날짜 및 시간:협의"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center">

        </TextView>

        <TextView
            android:id="@+id/cardLocation"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="280dp"
            android:text="지역 :인천광역시"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            android:gravity="center">

        </TextView>

        <TextView
            android:id="@+id/cardDetail"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="340dp"
            android:text="요양 가능 등급:3등급 이내"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center">

        </TextView>



    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btn_test1"
            android:layout_width="130dp"
            android:layout_height="90dp"
            android:backgroundTint="#eee6c4"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="취소"
            android:layout_marginRight="50dp"/>

        <Button
            android:id="@+id/btn_test2"
            android:layout_width="130dp"
            android:layout_height="90dp"
            android:backgroundTint="#eee6c4"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="결제" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp">
        <ImageButton
            android:id="@+id/bottomHomeBtn1"
            android:layout_width="138dp"
            android:layout_height="90dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/home"/>

        <ImageButton
            android:id="@+id/bottomMyPageBtn2"
            android:layout_width="138dp"
            android:layout_height="90dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/person"/>

        <ImageButton
            android:id="@+id/bottomBackBtn3"
            android:layout_width="138dp"
            android:layout_height="90dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/back" />
    </LinearLayout>

</LinearLayout>