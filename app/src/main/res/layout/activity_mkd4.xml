<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">


    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/jeiulogo"/>

    <TextView
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="0dp"
        android:textColor="#EEE6C4"
        android:textStyle="bold"
        android:text="결제 내역 확인"
        android:textSize="35dp"/>

    <TextView
        android:id="@+id/editTextDate"
        android:layout_width="258dp"
        android:layout_height="120dp"
        android:layout_marginTop="45dp"
        android:background="#dbc981"
        android:textStyle="bold"
        android:gravity="center"
        android:text="2022-11-02                16 : 00   조주환 입금                                  + 100000"
        android:textSize="27dp" />
    <TextView
        android:id="@+id/editTextDate1"
        android:layout_width="258dp"
        android:layout_height="120dp"
        android:layout_marginTop="45dp"
        android:background="#dbc981"
        android:textStyle="bold"
        android:gravity="center"
        android:text="2022-11-01                7 : 00   문경덕 입금                                  + 100000"
        android:textSize="27dp" />



    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginTop="140dp"
        tools:ignore="MissingConstraints">


        <ImageButton
            android:id="@+id/bottomHomeBtn"
            android:layout_width="138dp"
            android:layout_height="90dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/home"/>

        <ImageButton
            android:id="@+id/bottomMyPageBtn"
            android:layout_width="138dp"
            android:layout_height="90dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/person"/>

        <ImageButton
            android:id="@+id/bottomBackBtn"
            android:layout_width="138dp"
            android:layout_height="90dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/back" />

    </LinearLayout>


</LinearLayout>